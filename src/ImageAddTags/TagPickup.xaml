<UserControl x:Class="ImageAddTags.TagPickup"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageAddTags"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="200">
    <Grid Background="White">
        <StackPanel>
            <local:TagPanelShow x:Name="panelTags" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0,0,0" />
            <TextBox x:Name="edtNewTag" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" KeyUp="txtNewTag_KeyUp" />
        </StackPanel>
    </Grid>
</UserControl>
